{
  "manifest_version": 2,
  "name": "PuzzleFree Button",
  "version": "1.3",
  "description": "Открывает сайт puzzlefree.game по клику на иконку.",
  "browser_action": {
    "default_title": "Open PuzzleFree.Game"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "puzzlefree@puzzlefree.game",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  }
}